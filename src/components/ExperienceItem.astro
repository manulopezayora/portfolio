---
import LinkButton from './LinkButton.astro';

interface Props {
    date: string;
    title: string;
    position: string;
    description: string;
    tasks: string[];
    link?: string;
}

const { date, title, position, description, tasks,  link } = Astro.props;

---

<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"></div>

<time class="mb-1 text-sm font-normal leading-none text-gray-500">{ date }</time>
<h2 class="text-lg mt-4 font-semibold text-yellow-200/90">{ title }</h2>
<h3 class="text-sm font-semibold text-white/90">{ position }</h3>
<p class="mb-4 text-base font-normal text-gray-400 text-pretty">{ description }</p>
<ul class="space-y-4 text-gray-500 list-disc list-inside dark:text-gray-400">
    {
        tasks.map(task => (
            <li>{ task }</li>
        ))
    }
</ul>
{
    link && (
        <LinkButton href={ link }>
            Saber m√°s
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"></path>
            </svg>
        </LinkButton>
    )
}

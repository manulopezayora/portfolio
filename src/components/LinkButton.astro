---
interface Props {
    text: string;
    href: string;
}

const { text, href } = Astro.props;
---

<a href={href} class="rounded-xl border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-105 hover:bg-white/10 transition" target="_blank" rel="noopener">
    <slot />
    { text }
</a>
